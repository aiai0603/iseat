

.login{
  display: flex;
  width: 100%;
  height: 400rpx;
  background-color: #3388ec;
  border-radius: 0 0 300rpx 300rpx;
  flex-flow: column;
  justify-content: start;
  align-items: center;
}


.login-board{
  width: 90%;
  height: 600rpx;
  box-shadow: 0 0 10rpx 10rpx rgba(0, 0, 0, 0.2);
  border-radius: 10rpx;
  margin: 50rpx 0;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}
input{
  margin: 15rpx ;
  width: 70%;
  font-size: 36rpx;
}
.input{
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items:  center;
  width: 90%;
  border:1rpx #bebebe solid;
  margin-bottom: 20rpx;

}

.login-title{
  font-size: 55rpx;
  margin-bottom: 50rpx;

}
.container {
  height: 100%;
  display: flex;
  flex-flow: column;
  align-items: center;
} 

.logo-wd{
  font-size: 68rpx;
  color: white;
}

.input-icon{
  font-size: 40rpx;
  color: #bebebe;
  
}

.button{
  width: 90%;
  background-color: #3388ec;
  color: white;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin: 20rpx 0;
  border-radius: 10rpx;
}

.forget{
  width: 80%;
  display: flex;
  flex-flow: row;
  color: #5c5c5c;
  font-size: 34rpx;
  align-items: flex-start;
  justify-content: start;
}

